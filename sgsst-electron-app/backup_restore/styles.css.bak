/* styles.css */

:root {
  /* Colores principales */
  --primary-color: #007bff; /* Azul Bootstrap por defecto */
  --primary-hover-color: #0056b3;
  --secondary-color: #6c757d;
  --success-color: #28a745;
  --danger-color: #dc3545;
  --warning-color: #ffc107;
  --info-color: #17a2b8;
  --light-color: #f8f9fa;
  --dark-color: #343a40;
  --white-color: #ffffff;
  --black-color: #000000;
  
  /* Colores de texto */
  --text-color: #212529;
  --text-light-color: #6c757d;
  --text-lighter-color: #adb5bd;
  --heading-color: #495057;
  
  /* Colores de fondo */
  --bg-color: #f8f9fa;
  --widget-bg-color: #ffffff;
  --border-color: #dee2e6;
  --border-color-dark: #ced4da;
  
  /* Colores de botones */
  --button-bg-color: var(--primary-color);
  --button-text-color: var(--white-color);
  --button-hover-bg-color: var(--primary-hover-color);
  --button-border-color: var(--primary-color);
  
  /* Colores de enlaces */
  --link-color: var(--primary-color);
  --link-hover-color: var(--primary-hover-color);
  
  /* Sombras */
  --box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
  --box-shadow-lg: 0 1rem 3rem rgba(0, 0, 0, 0.175);
  
  /* Bordes */
  --border-radius-sm: 0.2rem;
  --border-radius-md: 0.375rem;
  --border-radius-lg: 0.5rem;
  
  /* Transiciones */
  --transition-fast: 0.15s ease-in-out;
  --transition-normal: 0.3s ease-in-out;
  
  /* Espaciado */
  --spacer: 1rem;
  --spacer-xs: calc(var(--spacer) * 0.25);
  --spacer-sm: calc(var(--spacer) * 0.5);
  --spacer-md: var(--spacer);
  --spacer-lg: calc(var(--spacer) * 1.5);
  --spacer-xl: calc(var(--spacer) * 3);
  
  /* Tipografía */
  --font-family-sans-serif: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
  --font-family-monospace: SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
  --font-family-base: var(--font-family-sans-serif);
  
  --font-size-base: 1rem;
  --font-size-lg: calc(var(--font-size-base) * 1.25);
  --font-size-sm: calc(var(--font-size-base) * 0.875);
  --font-size-xs: calc(var(--font-size-base) * 0.75);
  
  --font-weight-light: 300;
  --font-weight-normal: 400;
  --font-weight-bold: 700;
  
  --line-height-base: 1.5;
  
  /* Otros */
  --sidebar-width: 250px;
  --header-height: 60px;
}

/* Paleta de colores extendida (grises) */
:root {
  --gray-50: #f9fafb;
  --gray-100: #f3f4f6;
  --gray-200: #e5e7eb;
  --gray-300: #d1d5db;
  --gray-400: #9ca3af;
  --gray-500: #6b7280;
  --gray-600: #4b5563;
  --gray-700: #374151;
  --gray-800: #1f2937;
  --gray-900: #111827;
}

/* Estilos generales */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: var(--font-family-base);
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-normal);
  line-height: var(--line-height-base);
  color: var(--text-color);
  text-align: left;
  background-color: var(--bg-color);
}

/* Encabezados */
h1, h2, h3, h4, h5, h6 {
  margin-top: 0;
  margin-bottom: var(--spacer-sm);
  font-weight: var(--font-weight-bold);
  line-height: 1.2;
  color: var(--heading-color);
}

h1 { font-size: 2.5rem; }
h2 { font-size: 2rem; }
h3 { font-size: 1.75rem; }
h4 { font-size: 1.5rem; }
h5 { font-size: 1.25rem; }
h6 { font-size: 1rem; }

/* Párrafos */
p {
  margin-top: 0;
  margin-bottom: 1rem;
}

/* Enlaces */
a {
  color: var(--link-color);
  text-decoration: none;
  background-color: transparent;
  transition: color var(--transition-fast);
}

a:hover {
  color: var(--link-hover-color);
  text-decoration: underline;
}

/* Imágenes */
img {
  vertical-align: middle;
  border-style: none;
  max-width: 100%;
  height: auto;
}

/* Botones */
.btn {
  display: inline-block;
  font-weight: var(--font-weight-normal);
  color: var(--button-text-color);
  text-align: center;
  vertical-align: middle;
  user-select: none;
  background-color: var(--button-bg-color);
  border: 1px solid var(--button-border-color);
  padding: 0.375rem 0.75rem;
  font-size: var(--font-size-base);
  line-height: 1.5;
  border-radius: var(--border-radius-md);
  transition: color var(--transition-fast), background-color var(--transition-fast), border-color var(--transition-fast), box-shadow var(--transition-fast);
  cursor: pointer;
}

.btn:hover {
  color: var(--button-text-color);
  background-color: var(--button-hover-bg-color);
  border-color: var(--button-hover-bg-color);
  text-decoration: none;
}

.btn:focus, .btn.focus {
  outline: 0;
  box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}

.btn:disabled, .btn.disabled {
  opacity: 0.65;
  cursor: not-allowed;
}

/* Botón primario */
.btn-primary {
  background-color: var(--primary-color);
  border-color: var(--primary-color);
}

.btn-primary:hover {
  background-color: var(--primary-hover-color);
  border-color: var(--primary-hover-color);
}

/* Botón secundario (outline) */
.btn-secondary {
  color: var(--secondary-color);
  background-color: transparent;
  border-color: var(--secondary-color);
}

.btn-secondary:hover {
  color: var(--white-color);
  background-color: var(--secondary-color);
  border-color: var(--secondary-color);
}

/* Botón de volver */
.btn-back {
  background-color: transparent;
  border: none;
  color: var(--primary-color);
  font-size: var(--font-size-base);
  padding: 0.375rem 0.5rem;
  margin-bottom: var(--spacer-sm);
  cursor: pointer;
  transition: color var(--transition-fast);
}

.btn-back:hover {
  color: var(--primary-hover-color);
  text-decoration: underline;
}

/* Contenedores */
.container {
  width: 100%;
  padding-right: var(--spacer-sm);
  padding-left: var(--spacer-sm);
  margin-right: auto;
  margin-left: auto;
}

@media (min-width: 576px) {
  .container {
    max-width: 540px;
  }
}

@media (min-width: 768px) {
  .container {
    max-width: 720px;
  }
}

@media (min-width: 992px) {
  .container {
    max-width: 960px;
  }
}

@media (min-width: 1200px) {
  .container {
    max-width: 1140px;
  }
}

/* Grid */
.row {
  display: flex;
  flex-wrap: wrap;
  margin-right: calc(var(--spacer-sm) * -1);
  margin-left: calc(var(--spacer-sm) * -1);
}

.col {
  flex-basis: 0;
  flex-grow: 1;
  max-width: 100%;
  padding-right: var(--spacer-sm);
  padding-left: var(--spacer-sm);
}

/* Tarjetas */
.card {
  position: relative;
  display: flex;
  flex-direction: column;
  min-width: 0;
  word-wrap: break-word;
  background-color: var(--widget-bg-color);
  background-clip: border-box;
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--box-shadow);
  transition: transform var(--transition-fast), box-shadow var(--transition-fast);
}

.card:hover {
  transform: translateY(-2px);
  box-shadow: var(--box-shadow-lg);
}

.card-body {
  flex: 1 1 auto;
  min-height: 1px;
  padding: var(--spacer);
}

.card-title {
  margin-bottom: var(--spacer-sm);
  font-size: 1.25rem;
  font-weight: var(--font-weight-bold);
}

.card-description {
  margin-bottom: var(--spacer);
  color: var(--text-light-color);
}

/* Formularios */
.form-group {
  margin-bottom: 1rem;
}

.form-label {
  display: inline-block;
  margin-bottom: 0.5rem;
  font-weight: var(--font-weight-bold);
}

.form-control {
  display: block;
  width: 100%;
  height: calc(1.5em + 0.75rem + 2px);
  padding: 0.375rem 0.75rem;
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-normal);
  line-height: 1.5;
  color: var(--text-color);
  background-color: var(--widget-bg-color);
  background-clip: padding-box;
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius-md);
  transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
}

.form-control:focus {
  color: var(--text-color);
  background-color: var(--widget-bg-color);
  border-color: #80bdff;
  outline: 0;
  box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}

.form-control::placeholder {
  color: var(--text-lighter-color);
  opacity: 1;
}

/* Select */
select.form-control {
  appearance: none;
  background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' width='4' height='5' viewBox='0 0 4 5'%3e%3cpath fill='%23343a40' d='M2 0L0 2h4zm0 5L0 3h4z'/%3e%3c/svg%3e");
  background-repeat: no-repeat;
  background-position: right 0.75rem center;
  background-size: 8px 10px;
  padding-right: 2rem;
}

/* Layout principal */
.app-layout {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* Header */
.app-header {
  background-color: var(--white-color);
  border-bottom: 1px solid var(--border-color);
  padding: var(--spacer-sm) var(--spacer);
  box-shadow: var(--box-shadow);
  z-index: 1000;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-title {
  font-size: 1.5rem;
  font-weight: var(--font-weight-bold);
  margin: 0;
  color: var(--heading-color);
}

/* Sidebar */
.app-sidebar {
  width: var(--sidebar-width);
  background-color: var(--dark-color);
  color: var(--white-color);
  padding: var(--spacer);
  transition: transform var(--transition-normal);
  z-index: 900;
}

.sidebar-nav {
  list-style: none;
  padding: 0;
  margin: 0;
}

.sidebar-nav-item {
  margin-bottom: 0.25rem;
}

.sidebar-nav-link {
  display: block;
  padding: 0.5rem 1rem;
  color: rgba(255, 255, 255, 0.8);
  text-decoration: none;
  border-radius: var(--border-radius-md);
  transition: all var(--transition-fast);
}

.sidebar-nav-link:hover,
.sidebar-nav-link.active {
  color: var(--white-color);
  background-color: rgba(255, 255, 255, 0.1);
}

/* Main content */
.app-main {
  flex: 1;
  padding: var(--spacer);
  background-color: var(--bg-color);
  overflow-y: auto;
}

/* Footer */
.app-footer {
  background-color: var(--dark-color);
  color: rgba(255, 255, 255, 0.7);
  padding: var(--spacer-sm);
  text-align: center;
  font-size: var(--font-size-sm);
}

/* Página de inicio */
.home-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  text-align: center;
  padding: var(--spacer-xl);
}

.home-title {
  font-size: 2.5rem;
  margin-bottom: var(--spacer);
  color: var(--heading-color);
}

.home-subtitle {
  font-size: 1.25rem;
  margin-bottom: var(--spacer-lg);
  color: var(--text-light-color);
}

.company-selection {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: var(--spacer);
}

.company-button {
  min-width: 150px;
  padding: var(--spacer-sm) var(--spacer);
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-bold);
}

/* Selector de empresa/module */
.company-module-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacer);
  padding: var(--spacer-sm);
  background-color: var(--widget-bg-color);
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius-md);
  box-shadow: var(--box-shadow);
}

.selector-label {
  font-weight: var(--font-weight-bold);
  margin-right: var(--spacer-sm);
}

/* Tarjetas de módulo */
.module-cards {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: var(--spacer);
}

.module-card {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.module-card .card-title {
  font-size: 1.125rem;
  margin-bottom: var(--spacer-xs);
}

.module-card .card-description {
  flex-grow: 1;
  margin-bottom: var(--spacer-sm);
  font-size: var(--font-size-sm);
}

/* Submódulo */
.submodule-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacer);
}

.submodule-title {
  margin: 0;
  font-size: 1.5rem;
  color: var(--heading-color);
}

.document-controls {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacer-sm);
  margin-bottom: var(--spacer);
  padding: var(--spacer-sm);
  background-color: var(--widget-bg-color);
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius-md);
  box-shadow: var(--box-shadow);
}

.document-controls .form-control,
.document-controls .btn {
  margin: 0;
}

/* Estilos específicos para restricciones médicas */
.enviar-remision-container {
  display: flex;
  flex-direction: column;
  gap: var(--spacer);
  padding: var(--spacer);
  background-color: var(--widget-bg-color);
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius-md);
  box-shadow: var(--box-shadow);
  height: calc(100vh - 200px); /* Ajustar altura */
  overflow-y: auto;
}

.settings-section,
.results-container,
.output-section,
.notification-section,
.action-bar {
  display: flex;
  flex-direction: column;
  gap: var(--spacer-sm);
}

.settings-section label {
  font-weight: var(--font-weight-bold);
  margin-bottom: var(--spacer-xs);
}

.file-input-container {
  display: flex;
  align-items: center;
  gap: var(--spacer-sm);
  margin-bottom: var(--spacer);
}

.file-name-display {
  flex-grow: 1;
  padding: 0.375rem 0.75rem;
  font-size: var(--font-size-base);
  line-height: 1.5;
  color: var(--text-color);
  background-color: var(--widget-bg-color);
  background-clip: padding-box;
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius-md);
  transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.results-container {
  display: flex;
  gap: var(--spacer);
  flex-grow: 1;
}

.data-display-frame {
  flex: 1;
  padding: var(--spacer-sm);
  background-color: var(--gray-50);
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius-md);
  overflow-y: auto;
  max-height: 300px; /* Limitar altura */
}

.extracted-data-container {
  display: flex;
  flex-direction: column;
  gap: var(--spacer-xs);
}

.data-field {
  display: flex;
  gap: var(--spacer-xs);
}

.data-key {
  font-weight: var(--font-weight-bold);
  min-width: 200px; /* Ancho fijo para la clave */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.data-value {
  flex-grow: 1;
  word-break: break-word;
}

.log-textbox {
  flex: 1;
  padding: var(--spacer-sm);
  background-color: var(--gray-100);
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius-md);
  overflow-y: auto;
  max-height: 300px; /* Limitar altura */
  font-family: var(--font-family-monospace);
  font-size: var(--font-size-sm);
}

.output-section label {
  font-weight: var(--font-weight-bold);
}

.output-path-container {
  display: flex;
  align-items: center;
  gap: var(--spacer-sm);
}

.output-path-container .form-control {
  flex-grow: 1;
}

.notification-section {
  flex-direction: row;
  justify-content: flex-start;
  gap: var(--spacer);
}

.action-bar {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-top: var(--spacer);
  border-top: 1px solid var(--border-color);
}

/* Responsive */
@media (max-width: 768px) {
  .module-cards {
    grid-template-columns: 1fr;
  }
  
  .results-container {
    flex-direction: column;
  }
  
  .data-field {
    flex-direction: column;
  }
  
  .data-key {
    min-width: auto;
  }
  
  .notification-section {
    flex-direction: column;
  }
  
  .action-bar {
    flex-direction: column;
    gap: var(--spacer-sm);
    align-items: stretch;
  }
  
  .action-bar .btn {
    width: 100%;
  }
}